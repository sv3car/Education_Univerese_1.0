<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.universe.education.education_univerese_10.FragmentsSesion.FragmentSesion2">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/pantalla_ingreso_informacionpersonal" />
            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000">

            </RelativeLayout>

            <ImageButton
                android:id="@+id/Ib1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00ffffff"/>
            <TextView
                android:id="@+id/tv1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:text="INFORMACIÃ“N PERSONAL"
                android:layout_marginBottom="20dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="15dp"/>

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/pantalla_ingreso_presupuesto" />
            <RelativeLayout
                android:id="@+id/rl2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000">

            </RelativeLayout>
            <ImageButton
                android:id="@+id/Ib2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00ffffff"/>
            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:text="PRESUPUESTOS"
                android:layout_marginBottom="20dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="15dp"/>
        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/pantalla_ingreso_documentos" />
            <RelativeLayout
                android:id="@+id/rl3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000">

            </RelativeLayout>
            <ImageButton
                android:id="@+id/Ib3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00ffffff"/>
            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:text="DOCUMENTOS"
                android:layout_marginBottom="20dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="15dp"/>

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/pantalla_ingreso_proceso" />
            <RelativeLayout
                android:id="@+id/rl4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000">

            </RelativeLayout>
            <ImageButton
                android:id="@+id/Ib4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00ffffff"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:text="PROCESO"
                android:layout_marginBottom="20dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="15dp"/>
        </RelativeLayout>


    </LinearLayout>


</FrameLayout>
